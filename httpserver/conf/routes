# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()


GET     /api/user	                controllers.Rest.listUsers()
POST    /api/user	                controllers.Rest.updateUser()
POST    /api/password	            controllers.Rest.changePassword()
GET		/api/user/:user_id			controllers.Rest.getUser(user_id : String)
POST	/api/auth					controllers.Rest.auth()
POST	/api/register				controllers.Rest.register2()
GET		/api/logout					controllers.Rest.logout()

GET		/photo/*id					controllers.Rest.getPhoto(id : String)
GET		/file/*id					controllers.Rest.getFile(id : String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

